@using FinTracker.Models
<div class="col-lg-3"></div>
<div class="text-center">
    <div class="col-lg-5">
        <h3 class="text-primary">Select Team</h3>
        <ul class="nav nav-pills nav-stacked">
            @foreach (String t in Common.GetUser.AssignedTeam.Split('|'))
            {
                switch (t)
                {
                    case "ap": ViewBag.Name = "Accounts Payable";
                        break;
                    case "ar": ViewBag.Name = "Accounts Recievable";
                        break;
                    case "tr": ViewBag.Name = "Treasary";
                        break;
                    case "fp": ViewBag.Name = "FPNA";
                        break;
                    case "ex": ViewBag.Name = "Expense Reimbersment";
                        break;
                }
                <li><a href="#/@t"  class="btn btn-default">@ViewBag.Name</a></li>
            }
        </ul>
    </div>
</div>
